<!DOCTYPE html>
<html lang="en">
<style>
    .error {
        color: red;
    }

    .spinner-border-sm {
        margin-bottom: 4px !important;
    }
</style>

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="">
    <!-- Favicon icon -->
    <link rel="icon" type="image/png" sizes="16x16" href="../../public/images/favicon.png">
    <!-- page css -->
    <link href="../../public/dist/css/pages/login-register-lock.css" rel="stylesheet">
    <!-- Custom CSS -->
    <link href="../../public/dist/css/style.min.css" rel="stylesheet">
    <!-- toast CSS -->
    <link href="../../public/node_modules/toast-master/css/jquery.toast.css" rel="stylesheet">
</head>

<body class="skin-default card-no-border">
    <div>
        <div class="login-box card">
            <section id="wrapper">
                <%- include('../common/flashMessage.ejs') %>
                    <div class="card-body">
                        <!-- model for password verification by clicking on vibecoin mint vibe coin menter -->
                        <form class="form-horizontal form-material" id="passwordForm"
                            action="<%= siteURL %>authenticate" method="POST">
                            <input id="vibecoin_mint_id" type="hidden" name="mint" id="mint" value="mint">
                            <div class="form-group ">
                                <div class="col-xs-12">
                                    <h3>Please enter login password</h3>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-xs-12">
                                    <input type="password" class="form-control" placeholder="Password" name="password">
                                </div>
                            </div>
                            <div class="form-group text-center m-t-20">
                                <div class="col-xs-12">
                                    <button class="btn btn-primary btn-lg btn-block waves-effect waves-light"
                                        type="submit" id="reset-password-btn">Continue</button>
                                </div>
                            </div>
                        </form>
                        <!-- model for password verification by clicking on vibecoin mint vibe coin menter -->
                    </div>
            </section>
        </div>
    </div>
    <script src="../../public/node_modules/jquery/jquery-3.2.1.min.js"></script>
    <script src="../../public/node_modules/popper/popper.min.js"></script>
    <script src="../../public/node_modules/bootstrap/dist/js/bootstrap.min.js"></script>
    <script src="../../public/node_modules/toast-master/js/jquery.toast.js"></script>
    <script src="../../public/dist/js/pages/toastr.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.3/jquery.validate.min.js"
        integrity="sha512-37T7leoNS06R80c8Ulq7cdCDU5MNQBwlYoy1TX/WUsLFC2eYNqtKlV0QjH7r8JpG/S0GUMZwebnVFLPd6SU5yg=="
        crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    <script type="text/javascript">
        $(function () {
            $("#passwordForm").validate({
                rules: {
                    password: {
                        required: true,
                    },
                },
            });
        });
    </script>
</body>

</html>