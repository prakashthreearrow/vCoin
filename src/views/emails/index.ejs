<div class="container-fluid">
    <div class="row page-titles">
        <div class="col-md-5 align-self-center">
            <h4 class="text-themecolor">
                Email Template
            </h4>
        </div>
        <div class="col-md-7 align-self-center text-right">
            <div class="d-flex justify-content-end align-items-center">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="<%= siteURL %>dashboard">Home</a></li>
                    <li class="breadcrumb-item active">Email Template</li>
                </ol>
            </div>
        </div>
    </div>
    <%- include('../common/flashMessage.ejs') %>
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-body">
                        <div class="table-responsive">
                            <table id="emailtemplate" class="table table-striped table-bordered" cellspacing="0"
                                width="100%">
                                <thead>
                                    <tr>
                                        <th>Title</th>
                                        <th>Subject</th>
                                        <th>Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% data.result.forEach(function (ele) { %>
                                        <tr>
                                            <td>
                                                <%= ele.title%>
                                            </td>
                                            <td>
                                                <%=ele.subject %>
                                            </td>
                                            <td class="box-label text-center">
                                                <a href="<%= siteURL %>emailDetails/<%= ele.id %>"><button type="button"
                                                        class="btn btn-sm btn-dark"><i
                                                            class="ti-pencil"></i></button></a>
                                        </tr>
                                        <%});%>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
</div>
<script>
    $('#emailtemplate').DataTable();
</script>