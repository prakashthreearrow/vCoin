<div class="container-fluid">
    <div class="row page-titles">
        <div class="col-md-5 align-self-center">
            <h4 class="text-themecolor">
                Vibecoin Referrals
            </h4>
        </div>
        <div class="col-md-7 align-self-center text-right">
            <div class="d-flex justify-content-end align-items-center">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="<%= siteURL %>dashboard">Home</a></li>
                    <li class="breadcrumb-item active">Vibecoin Referrals</li>
                </ol>
            </div>
        </div>
    </div>
    <%- include('../common/flashMessage.ejs') %>
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-body">
                        <div class="table-responsive">
                            <table id="vibecoinTransaction" class="table table-striped table-bordered contact-list"
                                cellspacing="0" width="100%">
                                <thead>
                                    <tr>
                                        <th>From</th>
                                        <th>To</th>
                                        <th>Loyalty Card</th>
                                        <th>Promotion Type</th>
                                        <th>Is Paid</th>
                                        <th>Type</th>
                                        <th>Referrals Date</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% data.vibecoinReferralsInfo.forEach(function (vibecoinReferrals) { %>
                                        <tr>
                                            <td>
                                                <p class="text-center">
                                                    <% if(vibecoinReferrals.from_id){ %>
                                                        <%= vibecoinReferrals.from_id %>
                                                            <% } else { %>-<% } %>
                                                </p>
                                            </td>
                                            <td>
                                                <p class="text-center">
                                                    <% if(vibecoinReferrals.to_id){ %>
                                                        <%= vibecoinReferrals.to_id %>
                                                            <% } else { %>-<% } %>
                                                </p>
                                            </td>
                                            <td>
                                                <p class="text-center">
                                                    <% if(vibecoinReferrals.promotion_id){ %>
                                                        <%= vibecoinReferrals.promotion_id %>
                                                            <% } else { %>-<% } %>
                                                </p>
                                            </td>
                                            <td>
                                                <p class="text-center">
                                                    <% if (vibecoinReferrals.promotion_type===1) { %>
                                                        <span>Discount</span>
                                                        <% } else if (vibecoinReferrals.promotion_type===2) { %>
                                                            <span>Promotions</span>
                                                            <% } else if (vibecoinReferrals.promotion_type===3) { %>
                                                                <span>Paid Referrals</span>
                                                                <% } else if (vibecoinReferrals.promotion_type===4) { %>
                                                                    <span>Cash Back</span>
                                                                    <% } %>
                                                </p>
                                            </td>
                                            <td>
                                                <p class="text-center">
                                                    <% if(vibecoinReferrals.is_paid){ %>
                                                        <%= vibecoinReferrals.is_paid %>
                                                            <% } else { %>-<% } %>
                                                </p>
                                            </td>
                                            <td>
                                                <p class="text-center">
                                                    <% if (vibecoinReferrals.type===1) { %>
                                                        <span>Referral</span>
                                                        <% } else if (vibecoinReferrals.type===2) { %>
                                                            <span>Upvotes</span>
                                                            <% } else { %>-<% } %>
                                                </p>
                                            </td>
                                            <td>
                                                <p class="text-center">
                                                    <% if(vibecoinReferrals.createdAt){ %>
                                                        <%= Helper.dateFormatWithTime(vibecoinReferrals.createdAt) %>
                                                            <% } else { %>-<% } %>
                                                </p>
                                            </td>
                                        </tr>
                                        <%}); %>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
</div>

<script>
    $('#vibecoinTransaction').DataTable();
</script>