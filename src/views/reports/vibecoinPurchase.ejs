<div class="container-fluid">
    <div class="row page-titles">
        <div class="col-md-5 align-self-center">
            <h4 class="text-themecolor">
                Vibecoin Purchase
            </h4>
        </div>
        <div class="col-md-7 align-self-center text-right">
            <div class="d-flex justify-content-end align-items-center">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="<%= siteURL %>dashboard">Home</a></li>
                    <li class="breadcrumb-item active">Vibecoin Purchase</li>
                </ol>
            </div>
        </div>
    </div>
    <%- include('../common/flashMessage.ejs') %>
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-body">
                        <div class="table-responsive">
                            <table id="vibecoinPurchase" class="table table-striped table-bordered contact-list"
                                cellspacing="0" width="100%">
                                <thead>
                                    <tr>
                                        <th>Name</th>
                                        <th>Type</th>
                                        <th>Amount</th>
                                        <th>Transaction_ID</th>
                                        <th>Vibecoin Transaction Status</th>
                                        <th>Transaction Date</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% data.vibecoinPurchaseInfo.forEach(function (vibecoinPurchase) { %>
                                        <tr>
                                            <td>
                                                <p class="text-center">
                                                    <% if(vibecoinPurchase.buyer_id){ %>
                                                        <%= vibecoinPurchase.buyer_id %>
                                                            <% } else { %>-<% } %>
                                                </p>
                                            </td>
                                            <td>
                                                <p class="text-center">
                                                    <% if(vibecoinPurchase.type===1){ %>
                                                        <span>User</span>
                                                        <% } else { %>
                                                            <span>Business</span>
                                                            <% } %>
                                                </p>
                                            </td>
                                            <td>
                                                <p class="text-center">
                                                    <% if(vibecoinPurchase.amount){ %>
                                                        <%= Helper.amountFormat(vibecoinPurchase.amount) %>
                                                            <% } else { %>-<% } %>
                                                </p>
                                            </td>
                                            <td>
                                                <p class="text-center">
                                                    <% if(vibecoinPurchase.transaction_id){ %>
                                                        <%= vibecoinPurchase.transaction_id %>
                                                            <% } else { %>-<% } %>
                                                </p>
                                            </td>
                                            <td>
                                                <p class="text-center">
                                                    <% if(vibecoinPurchase.vibecoin_transaction_status===1){ %>
                                                        <span>Success</span>
                                                        <% } else { %>
                                                            <span>Fail</span>
                                                            <% } %>
                                                </p>
                                            </td>
                                            <td>
                                                <p class="text-center">
                                                    <% if(vibecoinPurchase.createdAt){ %>
                                                        <%= Helper.dateFormatWithTime(vibecoinPurchase.createdAt) %>
                                                            <% } else { %>-<% } %>
                                                </p>
                                            </td>
                                        </tr>
                                        <%}); %>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
</div>

<script>
    $('#vibecoinPurchase').DataTable();
</script>