<!-- Change form -->
<div class="container-fluid">
    <div class="row page-titles">
        <div class="col-md-5 align-self-center">
            <h4 class="text-themecolor">Add Plan</h4>
        </div>
        <div class="col-md-7 align-self-center text-right">
            <div class="d-flex justify-content-end align-items-center">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="javascript:void(0)">Home</a></li>
                    <li class="breadcrumb-item active">Add Plan</li>
                </ol>
            </div>
        </div>
    </div>
    <%- include('../common/flashMessage.ejs') %>
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-body">
                        <form class="" id="planform" action="<%= siteURL %>save_plan" method="POST"
                            enctype="multipart/form-data">

                            <div class="form-group">
                                <div class="row">
                                    <div class="col-md-6">
                                        <label class="control-label">Title</label>
                                        <input class="form-control" type="text" name="title"
                                            placeholder="Enter Title" />
                                    </div>


                                    <div class="col-md-6">
                                        <label class="control-label">Price</label>
                                        <input class="form-control" id="price" type="number" name="price"
                                            placeholder="Enter Price" />
                                    </div>
                                </div>
                            </div>


                            <div class="form-group">
                                <div class="row">
                                    <div class="col-md-6">
                                        <label>Type</label>
                                        <select class="custom-select col-12" id="type" name="type">
                                            <option value="1" selected>Free</option>
                                            <option value="2">Paid</option>
                                        </select>
                                    </div>



                                    <div class="col-md-6">
                                        <label class="control-label">Plan Price Id</label>
                                        <input class="form-control" id="plan_price_id" type="text" name="plan_price_id"
                                            placeholder="Enter Plan Id" />
                                    </div>
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="row">
                                    <div class="col-md-6">
                                        <label class="control-label">Description</label>
                                        <textarea class="form-control" id="description" rows="3" name="description"
                                            placeholder="Enter Description"></textarea>
                                    </div>

                                    <div class="col-md-6">
                                        <label class="control-label">Photo</label>
                                        <input class="form-control" id="photo" type="file" name="photo" />
                                    </div>
                                </div>
                            </div>


                            <button class="btn btn-primary waves-effect waves-light" type="submit">
                                Save
                            </button>
                            <button onclick="history.back()" type="button" class="btn btn-inverse">Cancel</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
</div>


<!-- Change form -->
<script type="text/javascript">
    $(function () {
        $("#planform").validate({
            rules: {
                title: {
                    required: true,
                },
                price: {
                    required: true,
                },
                plan_price_id: {
                    required: true,
                },
                description: {
                    required: true,
                },
                photo: {
                    required: true,
                },
                type: {
                    required: true,
                },
            },
        });
    });


</script>

